<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="230dp"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/parcours_image"
                android:layout_marginTop="6dp"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/parcours"
                android:layout_centerHorizontal="true"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearlayout1"
                android:layout_below="@id/parcours_image"
                android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/parcours_titre"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="parcours_titre"
                    android:textSize="20dp"
                    android:layout_centerInParent="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/linearlayout1"
                android:id="@+id/linearlayout2"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/category_parcours"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="category_parcours"
                    android:textSize="20dp"
                    android:layout_centerInParent="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/linearlayout2"
                android:id="@+id/linearlayout3"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/description_parcours"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="description_parcours"
                    android:textSize="20dp"
                    android:layout_centerInParent="true"
                    />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>